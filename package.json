{
  "name": "re-reduced",
  "version": "2.0.1",
  "main": "dist/index.js",
  "umd:main": "dist/re-reduced.umd.production.js",
  "module": "dist/re-reduced.es.production.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:coverage": "tsdx test --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "postversion": "git push && git push --tags",
    "docz": "docz dev",
    "docz:build": "docz build",
    "typedoc": "typedoc --out api-reference src/lib",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanrsoares/re-reduced.git"
  },
  "keywords": [
    "redux",
    "higher-order-reducer",
    "react",
    "immutable",
    "functional programming"
  ],
  "author": "Alan Soares <alanrsoars@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alanrsoares/re-reduced/issues"
  },
  "homepage": "https://github.com/alanrsoares/re-reduced#readme",
  "peerDependencies": {
    "react-redux": ">=7.1.0",
    "redux": ">=4",
    "redux-saga": ">=1",
    "reselect": ">=4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "eslint",
        "pretty-quick",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/ramda": "^0.26.9",
    "@types/react": "^16.8.20",
    "@types/react-redux": "^7.1.0",
    "@types/styled-components": "^4.1.16",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "docz": "^1.2.0",
    "docz-plugin-css": "^0.11.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.11.1",
    "react-redux": "^7.1.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.3",
    "redux-saga-test-plan": "^4.0.0-beta.3",
    "reselect": "^4.0.0",
    "styled-components": "^4.3.1",
    "tsdx": "^0.7.1",
    "tslint": "^5.16.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "ramda": "^0.26.1"
  }
}
